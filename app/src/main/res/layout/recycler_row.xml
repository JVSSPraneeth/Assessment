<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_top_bottom_margin"
        android:layout_marginTop="@dimen/standard_top_bottom_margin"
        android:gravity="left|start|center_vertical"
        android:orientation="vertical"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/recycler_top_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:padding="@dimen/standard_top_bottom_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fab_text_size" />

        <TextView
            android:id="@+id/recycler_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:ellipsize="none"
            android:maxLines="1"
            android:padding="@dimen/standard_top_bottom_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fab_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
</android.support.v7.widget.CardView>